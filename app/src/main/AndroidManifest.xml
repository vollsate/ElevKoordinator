<?xml version="1.0" encoding="utf-8"?>
<manifest package="no.glv.elevko"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AppActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentViewActivity"
            android:parentActivityName=".GroupViewActivity">
        </activity>
        <activity
            android:name=".NewTaskActivity"
            android:label="@string/title_activity_new_task"
            android:parentActivityName=".AppActivity">
        </activity>
        <activity
            android:name=".TaskViewActivity"
            android:label="@string/title_activity_task"
            android:parentActivityName=".AppActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".TaskManagerActivity"
            android:label="@string/title_activity_task"
            android:parentActivityName=".AppActivity">
        </activity>
        <activity
            android:name=".GroupViewActivity"
            android:label="@string/activity.stdlist.title"
            android:parentActivityName=".AppActivity">
        </activity>
        <activity
            android:name=".ActionSpinner"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
